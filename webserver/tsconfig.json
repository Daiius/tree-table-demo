{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    //"inlineSourceMap": true,
    // ignore node_module tsc --noEmit check
    "skipLibCheck": true
  }
}

